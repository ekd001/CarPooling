<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">



        <!-- Title -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inscription_text"
            android:fontFamily="@font/gotham_bold"
            android:textSize="35sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="8dp">
        <!-- Email Input -->
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="9dp"
                android:src="@drawable/email_icon" />
            <EditText
                android:id="@+id/email_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/email"
                android:fontFamily="@font/gotham_book"
                android:inputType="textEmailAddress"
                android:paddingStart="8dp"
                android:background="@drawable/edit_text_custom"/>
        </LinearLayout>
            <!-- Password Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="9dp"
                android:src="@drawable/password_icon" />

            <EditText
                android:id="@+id/password_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/mot_de_passe"
                android:fontFamily="@font/gotham_book"
                android:inputType="textPassword"
                android:background="@drawable/edit_text_custom"
                android:paddingStart="8dp" />
        </LinearLayout>
            <!-- Confirm Password Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="9dp"
                android:src="@drawable/password_icon" />

            <EditText
                android:id="@+id/confirm_password_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/confirmation_password"
                android:fontFamily="@font/gotham_book"
                android:inputType="textPassword"
                android:background="@drawable/edit_text_custom"
                android:paddingStart="8dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/choiceRole"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvRoleSelection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_bold"
                android:textSize="25sp"
                android:text="Je suis : "
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rgRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="3sp"
                android:layout_marginBottom="20dp">

                <RadioButton
                    android:id="@+id/rbPassenger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passenger"
                    android:fontFamily="@font/gotham_bold"
                    android:layout_marginEnd="16dp" />

                <RadioButton
                    android:id="@+id/rbDriver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Driver"
                    android:fontFamily="@font/gotham_bold" />
            </RadioGroup>
    </LinearLayout>
            <!-- Driver License Input (Hidden by Default) -->
            <EditText
                android:id="@+id/etDriverLicense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Numero de permi"
                android:background="@drawable/rounded_input"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:inputType="text" />

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/signup_button"
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/mainColor"
            android:text="@string/valider"
            android:fontFamily="@font/gotham_medium"
            android:textColor="@android:color/white" />

        <!-- Or Sign Up With -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="50dp">

            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:background="@color/mainColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sinscrire_avec"
                android:fontFamily="@font/gotham_medium"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:background="@color/mainColor" />
        </LinearLayout>

        <!-- Google Sign-Up Button -->
        <LinearLayout
            android:id="@+id/btnGoogleSignUp"
            android:layout_width="167dp"
            android:layout_height="66dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_with_google"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/socialButtonImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/google_icon" />

            <TextView
                android:id="@+id/socialButtonText"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/gotham_bold"
                android:text="Google"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Already Have an Account -->
        <TextView
            android:id="@+id/tvAlreadyAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deja_compte_connexion"
            android:fontFamily="@font/gotham_medium"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>
</ScrollView>
